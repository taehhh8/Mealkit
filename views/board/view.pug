            tbody
                each va, index in boardList 
                    tr
                        form(action="/board/delete" method='post')          
                            th= va.num
                                input(type="hidden" id="num" name="num" value= va.num)
                            th= va.Email
                            th= va.Phone_Number
                            th= va.Writer
                            th= va.Content
                            th= va.Posted_time
